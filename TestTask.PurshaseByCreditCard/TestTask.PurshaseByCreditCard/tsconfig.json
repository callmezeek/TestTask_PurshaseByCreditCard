{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es6",
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "react",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "types": [ "webpack-env" ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "bin",
    "node_modules"
  ]
}
